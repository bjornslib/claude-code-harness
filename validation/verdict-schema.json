{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValidationVerdict",
  "type": "object",
  "required": ["task_id", "mode", "success", "validation_levels", "timestamp"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Beads task ID (e.g., agencheck-xyz)"
    },
    "mode": {
      "type": "string",
      "enum": ["implementation", "business"],
      "description": "Validation mode: implementation (technical) or business (outcomes)"
    },
    "success": {
      "type": "boolean",
      "description": "Overall validation result"
    },
    "validation_levels": {
      "type": "object",
      "properties": {
        "unit_tests": {
          "type": "object",
          "properties": {
            "passed": { "type": "boolean" },
            "evidence": { "type": "string" },
            "skipped_reason": { "type": "string" }
          }
        },
        "api_tests": {
          "type": "object",
          "properties": {
            "passed": { "type": "boolean" },
            "evidence": { "type": "string" },
            "skipped_reason": { "type": "string" }
          }
        },
        "e2e_tests": {
          "type": "object",
          "properties": {
            "passed": { "type": "boolean" },
            "evidence": { "type": "string" },
            "skipped_reason": { "type": "string" }
          }
        }
      }
    },
    "rationale": {
      "type": "string",
      "description": "Explanation of validation decision"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "List of evidence artifacts produced"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of validation"
    }
  }
}
