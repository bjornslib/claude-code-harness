{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Doc-gardener configuration for multi-directory scanning",
  "targets": [".claude/", "docs/"],
  "skip_dirs": ["archive", "scratch-pads", ".serena", ".taskmaster", "node_modules", ".venv", "trees"],
  "skip_files": ["documentation/gardening-report.md"],
  "directory_grades": {
    "docs/architecture": "reference",
    "docs/prds": "reference",
    "docs/solution-designs": "reference"
  },
  "frontmatter_required_dirs": ["docs/architecture", "docs/prds", "docs/deployment", "docs/testing", "docs/guides"],
  "frontmatter_optional_dirs": ["docs/solution-designs", "docs/plans"],
  "claude_md_lint": true
}
