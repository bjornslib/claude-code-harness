// poc-fresh.dot — POC test scenario 1: Fresh pipeline, all nodes pending
//
// Expected runner action: spawn_orchestrator for impl_backend
// (the first codergen node whose only dependency, start, is validated)
//
// Schema: .claude/attractor/schema.md

digraph "poc-fresh" {
    graph [
        label="POC Test: Fresh Pipeline"
        labelloc="t"
        fontsize=16
        rankdir="TB"
        prd_ref="PRD-POC-001"
        promise_id=""
    ];

    node [fontname="Helvetica" fontsize=11];
    edge [fontname="Helvetica" fontsize=9];

    // Entry node — validated (pipeline has been parsed)
    start [
        shape=Mdiamond
        label="PARSE\nPRD-POC-001"
        handler="start"
        status="validated"
    ];

    // First implementation task — pending (ready: start is validated)
    impl_backend [
        shape=box
        label="Implement\nBackend API"
        handler="codergen"
        bead_id="TASK-10"
        worker_type="backend-solutions-engineer"
        acceptance="POST /api/items returns 200 with JSON body"
        promise_ac="AC-1"
        status="pending"
        style=filled
        fillcolor=lightyellow
    ];

    // Technical validation gate — pending (blocked: impl_backend not complete)
    validate_backend [
        shape=hexagon
        label="Backend\nValidation"
        handler="wait.human"
        gate="technical"
        mode="technical"
        bead_id="AT-10-TECH"
        promise_ac="AC-1"
        status="pending"
        style=filled
        fillcolor=lightyellow
    ];

    // Exit node — pending (blocked: validate_backend not complete)
    finalize [
        shape=Msquare
        label="FINALIZE"
        handler="exit"
        status="pending"
    ];

    // Edges
    start -> impl_backend [label="begin"];
    impl_backend -> validate_backend [label="impl_complete"];
    validate_backend -> finalize [label="validated"];
}
