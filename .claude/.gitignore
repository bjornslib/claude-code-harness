# Ignore generated Codex review reports (prevent stale report issues)
reports/post-push/codex-review-*.md

# Keep the directory structure and other files
!reports/post-push/.gitkeep

# Session-specific runtime state (completion promises, session tracking)
completion-state/promises/
completion-state/sessions/
completion-state/default/
completion-state/history/
completion-state/validations/*/

# Keep directory structure
!completion-state/.gitkeep
!completion-state/promises/.gitkeep
!completion-state/sessions/.gitkeep
!completion-state/history/.gitkeep
!completion-state/validations/.gitkeep

# Runtime state (contents ignored, directory kept)
state/*
!state/.gitkeep

# Progress logs
progress/*
!progress/.gitkeep

# Worker assignments
worker-assignments/*
!worker-assignments/.gitkeep

# Message bus runtime
message-bus/queue.db
message-bus/signals/*.signal
message-bus/signals/*.msg

# Local settings
settings.local.json

# Python cache
__pycache__/
*.pyc
